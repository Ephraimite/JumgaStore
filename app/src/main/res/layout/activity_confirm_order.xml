<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ConfirmOrderActivity">

    <EditText
        android:id="@+id/name_ship"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        app:layout_constraintEnd_toEndOf="@+id/textView16"
        app:layout_constraintStart_toStartOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Please write your shipment Details"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/phone_ship"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Phone Number"
        app:layout_constraintEnd_toEndOf="@+id/name_ship"
        app:layout_constraintStart_toStartOf="@+id/name_ship"
        app:layout_constraintTop_toBottomOf="@+id/name_ship" />

    <EditText
        android:id="@+id/home_address_ship"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Home Address"
        app:layout_constraintEnd_toEndOf="@+id/phone_ship"
        app:layout_constraintStart_toStartOf="@+id/phone_ship"
        app:layout_constraintTop_toBottomOf="@+id/phone_ship" />

    <EditText
        android:id="@+id/city_name_ship"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="City Name"
        app:layout_constraintEnd_toEndOf="@+id/home_address_ship"
        app:layout_constraintStart_toStartOf="@+id/home_address_ship"
        app:layout_constraintTop_toBottomOf="@+id/home_address_ship" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Confirm"
        app:layout_constraintEnd_toEndOf="@+id/city_name_ship"
        app:layout_constraintStart_toStartOf="@+id/city_name_ship"
        app:layout_constraintTop_toBottomOf="@+id/city_name_ship" />

    <EditText
        android:id="@+id/email_ship"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Email"
        app:layout_constraintEnd_toEndOf="@+id/city_name_ship"
        app:layout_constraintStart_toStartOf="@+id/city_name_ship"
        app:layout_constraintTop_toBottomOf="@+id/city_name_ship" />

</androidx.constraintlayout.widget.ConstraintLayout>